{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://odin-core.dev/schemas/learning-pack.v1.schema.json",
  "title": "Odin Learning Pack Metadata v1",
  "type": "object",
  "required": [
    "schema_version",
    "pack_id"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": 1
    },
    "pack_id": {
      "type": "string",
      "minLength": 1,
      "pattern": ".*\\S.*"
    }
  }
}
